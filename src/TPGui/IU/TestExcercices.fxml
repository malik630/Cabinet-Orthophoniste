<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="TPGui.IU.TestExcercixesController">
	<children>
		<Label layoutX="181.0" layoutY="23.0" text="Création d'un test excercice">
			<font>
				<Font name="Georgia" size="18.0" />
			</font>
		</Label>
		<RadioButton fx:id="Exo" layoutX="171.0" layoutY="190.0"
			mnemonicParsing="false" onAction="#getType" text="Excercice" visible="false">
			<font>
				<Font name="Georgia Italic" size="14.0" />
			</font>
			<toggleGroup>
				<ToggleGroup fx:id="TypeExo" />
			</toggleGroup>
		</RadioButton>
		<RadioButton fx:id="ExoMateriel" layoutX="267.0" layoutY="190.0"
			mnemonicParsing="false" onAction="#getType" text="Excercice materiel"
			toggleGroup="$TypeExo" visible="false">
			<font>
				<Font name="Georgia Italic" size="14.0" />
			</font>
		</RadioButton>
		<Button fx:id="ajoutExo" layoutX="171.0" layoutY="145.0"
			mnemonicParsing="false" onAction="#showExo" prefHeight="14.0"
			prefWidth="237.0" text="Ajouter Excercice" />
		<TextField fx:id="NomTest" layoutX="171.0" layoutY="63.0"
			prefHeight="14.0" prefWidth="237.0" promptText="Nom du test" />
		<TextField fx:id="Capacite" layoutX="171.0" layoutY="108.0"
			prefHeight="14.0" prefWidth="237.0" promptText="Capacite" />
		<TextField fx:id="Consigne" layoutX="171.0" layoutY="219.0"
			prefHeight="14.0" prefWidth="237.0" promptText="Consigne" visible="false" />
		<TextField fx:id="materiel" layoutX="171.0" layoutY="261.0"
			prefHeight="14.0" prefWidth="237.0" promptText="Matériel utilisé"
			visible="false" />
		<Button fx:id="SauvegardeExo" layoutX="171.0" layoutY="300.0"
			mnemonicParsing="false" onAction="#hideExo" prefHeight="14.0"
			prefWidth="237.0" text="Sauvegarder l'Excercice" visible="false" />
		<Button fx:id="SauvegardTest" layoutX="171.0" layoutY="343.0"
			mnemonicParsing="false" onAction="#hideTest" prefHeight="14.0"
			prefWidth="237.0" text="Sauvegarder le Test" />
		<Button fx:id="Quitter" layoutX="474.0" layoutY="343.0"
			mnemonicParsing="false" onAction="#switchtotest" text="Quitter" />
	</children>
</AnchorPane>
